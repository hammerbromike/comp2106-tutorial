<h1>Contact Form</h1>
<form class="mx-auto contact-form" method="POST" action="send">
    <fieldset>
      <label class="control-label col-2" for="name">Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Enter Name*"
        class="form-control"
        required
      />
    </fieldset>
    <fieldset>
      <label class="control-label col-2" for="email">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Enter Email*"
        class="form-control"
        required
      />
    </fieldset>
    <fieldset>
      <label class="control-label col-2" for="address">Address:</label>
      <input
        type="address"
        id="address"
        name="address"
        placeholder="Enter Address"
        class="form-control"
      />
    </fieldset>
    <fieldset>
      <label class="control-label col-2" for="subject">Subject:</label>
      <input
        type="text"
        id="subject"
        name="subject"
        placeholder="Subject line*"
        class="form-control"
        required
      />
    </fieldset>
    <fieldset>
      <label class="control-label col-2" for="message">Message:</label>
      <textarea
        id="message"
        name="message"
        rows="5"
        class="form-control"
        required
      ></textarea>
    </fieldset>
    <button class="btn btn-primary offset-2">Submit</button>
</form>